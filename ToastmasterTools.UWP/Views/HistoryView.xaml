<Page x:Class="ToastmasterTools.UWP.Views.HistoryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:ToastmasterTools.UWP.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      DataContext="{Binding Source={StaticResource Locator},
                            Path=HistoryViewModel}"
      mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="GridViewHeaderTemplate" >
            <TextBlock Text="{Binding}" Foreground="{StaticResource ComplementaryColor}" FontSize="20" HorizontalAlignment="Left"></TextBlock>
        </DataTemplate>
        <Style x:Key="GridViewHeaderStyle" TargetType="GridView">
            <Setter Property="Padding" Value="0,0,0,10"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="TabNavigation" Value="Once"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled"/>
            <Setter Property="ScrollViewer.IsHorizontalRailEnabled" Value="False"/>
            <Setter Property="ScrollViewer.VerticalScrollMode" Value="Enabled"/>
            <Setter Property="ScrollViewer.IsVerticalRailEnabled" Value="True"/>
            <Setter Property="ScrollViewer.ZoomMode" Value="Disabled"/>
            <Setter Property="ScrollViewer.IsDeferredScrollingEnabled" Value="False"/>
            <Setter Property="ScrollViewer.BringIntoViewOnFocusChange" Value="True"/>
            <Setter Property="IsSwipeEnabled" Value="True"/>
            <Setter Property="ItemContainerTransitions">
                <Setter.Value>
                    <TransitionCollection>
                        <AddDeleteThemeTransition/>
                        <ContentThemeTransition/>
                        <ReorderThemeTransition/>
                        <EntranceThemeTransition IsStaggeringEnabled="False"/>
                    </TransitionCollection>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridView">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="ScrollViewer" AutomationProperties.AccessibilityView="Raw" BringIntoViewOnFocusChange="{TemplateBinding ScrollViewer.BringIntoViewOnFocusChange}" HorizontalScrollMode="{TemplateBinding ScrollViewer.HorizontalScrollMode}" HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}" IsHorizontalRailEnabled="{TemplateBinding ScrollViewer.IsHorizontalRailEnabled}" IsHorizontalScrollChainingEnabled="{TemplateBinding ScrollViewer.IsHorizontalScrollChainingEnabled}" IsVerticalScrollChainingEnabled="{TemplateBinding ScrollViewer.IsVerticalScrollChainingEnabled}" IsVerticalRailEnabled="{TemplateBinding ScrollViewer.IsVerticalRailEnabled}" IsDeferredScrollingEnabled="{TemplateBinding ScrollViewer.IsDeferredScrollingEnabled}" TabNavigation="{TemplateBinding TabNavigation}" VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}" VerticalScrollMode="{TemplateBinding ScrollViewer.VerticalScrollMode}" ZoomMode="{TemplateBinding ScrollViewer.ZoomMode}">
                                <ItemsPresenter FooterTransitions="{TemplateBinding FooterTransitions}" FooterTemplate="{TemplateBinding FooterTemplate}" Footer="{TemplateBinding Footer}" HeaderTemplate="{StaticResource GridViewHeaderTemplate}" Header="{TemplateBinding Header}" HeaderTransitions="{TemplateBinding HeaderTransitions}" Padding="{TemplateBinding Padding}"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource AppBackgroundColor}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="LowHeight">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger x:Name="LowHeightTrigger" MinWindowHeight="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ImageRow.Height" Value="40" />
                        <Setter Target="HelpText.FontSize" Value="14" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NormalHeight">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger x:Name="NormalHeightTrigger" MinWindowHeight="500" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="HelpText.FontSize" Value="20" />
                        <Setter Target="ImageRow.Height" Value="60" />
                        <Setter Target="SpeechGridView.Margin" Value="0 60 0 0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="ImageRow" Height="120" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Background="{StaticResource AppBackgroundColor}">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Image x:Name="LogoImage"
                           Margin="0 0 10 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Source="../Assets/Icons/history.png" />
                </StackPanel>
            </Grid>
            <TextBlock Grid.Row="0"
                       Grid.RowSpan="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="30"
                       Foreground="{StaticResource ComplementaryColor}"
                       Text="Nothing here yet..."
                       Visibility="{Binding HistoryIsEmpty,
                                            Converter={StaticResource BooleanToVisiblityConverter}}" />
            <Grid Grid.Row="1">
                <TextBlock x:Name="HelpText"
                           FontSize="18" Margin="0 5 0 0"
                           Foreground="{StaticResource ComplementaryColor}"
                           Text="Here are your recorded speeches:"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <GridView x:Name="SpeechGridView"
                          Margin="0 40 0 0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          HorizontalContentAlignment="Center"
                          ItemsSource="{Binding Speeches,
                                                Mode=TwoWay}"
                          SelectionMode="None"
                          SelectedItem="{Binding SelectedSpeech, Mode=TwoWay}">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Border Width="150"
                                    Height="100"
                                    Margin="2"
                                    Tapped="SpeechTapped"
                                    BorderBrush="{StaticResource ComplementaryColor}"
                                    BorderThickness="2"
                                    CornerRadius="15">
                                <Grid HorizontalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Viewbox Margin="3">
                                        <TextBlock Foreground="{StaticResource ComplementaryColor}"
                                                   Text="{Binding Speaker.Name}"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap" />
                                    </Viewbox>
                                    <TextBlock Grid.Row="1"
                                               Foreground="{StaticResource ComplementaryColor}"
                                               Text="{Binding SpeechType.Name}"
                                               TextAlignment="Center" />
                                    <TextBlock Grid.Row="2"
                                               Foreground="{StaticResource ComplementaryColor}"
                                               Text="{Binding SpeechTimeInSeconds,
                                                              Converter={StaticResource SecondsToTimeDisplayDateConverter}}"
                                               TextAlignment="Center" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
                <Grid x:Name="SpeechGrid"
                      Margin="0 10 0 0" Visibility="{Binding SpeechDetailsAreVisible, Converter={StaticResource BooleanToVisiblityConverter}}"
                      Background="{StaticResource AppBackgroundColor}">
                    <ScrollViewer>
                        <Grid Margin="20 0" VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="200" />
                                <RowDefinition Height="100" />
                            </Grid.RowDefinitions>
                            <Grid x:Name="TimerGrid">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock FontSize="20"
                                               Foreground="{StaticResource ComplementaryColor}"
                                               Text="{Binding SelectedSpeech.Speaker.Name}"
                                               TextAlignment="Left"
                                               TextWrapping="Wrap" />
                                    <TextBlock FontSize="20"
                                               Foreground="{StaticResource ComplementaryColor}"
                                               Text="{Binding SelectedSpeech.SpeechType.Name}"
                                               TextAlignment="Left" />
                                    <TextBlock FontSize="20"
                                               Foreground="{StaticResource ComplementaryColor}"
                                               Text="{Binding SelectedSpeech.SpeechTimeInSeconds,
                                                              Converter={StaticResource SecondsToTimeDisplayDateConverter}}"
                                               TextAlignment="Left" />
                                </StackPanel>
                            </Grid>
                            <GridView x:Name="Counters"
                                      Grid.Row="1" Visibility="{Binding SelectedSpeech.Counters, Converter={StaticResource EmptyCollectionToVisibilityConverter}, Mode=TwoWay}"
                                      Header="Counters" HorizontalAlignment="Center"
                                      ItemsSource="{Binding SelectedSpeech.Counters}" Style="{StaticResource GridViewHeaderStyle}">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="10" Orientation="Horizontal">
                                            <TextBlock Foreground="{StaticResource ComplementaryColor}" Text="{Binding Name}" />
                                            <TextBlock Margin="2 0"
                                                       Foreground="{StaticResource ComplementaryColor}"
                                                       Text=":" />
                                            <TextBlock Foreground="{StaticResource ComplementaryColor}" Text="{Binding Count}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                            <TextBox Grid.Row="2"
                                     Width="{Binding ElementName=PageControl,
                                                     Path=ActualWidth,
                                                     Mode=TwoWay}"
                                     AcceptsReturn="True"
                                     Background="Transparent"
                                     BorderBrush="{StaticResource ComplementaryColor}"
                                     Foreground="{StaticResource ComplementaryColor}"
                                     PlaceholderText="Nothing here yet. You can write some notes..."
                                     Style="{StaticResource GrammarNotesStyle}"
                                     Text="{Binding SelectedSpeech.Notes,
                                                    Mode=TwoWay}"
                                     TextAlignment="Left" />
                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                                <Button x:Name="UpdateSpeech"
                                        Width="50"
                                        Height="50"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Background="{StaticResource ComplementaryColor}"
                                        Click="{x:Bind ViewModel.UpdateSpeech}"
                                        Foreground="White">
                                    <SymbolIcon Symbol="Save" />
                                </Button>
                                <Button x:Name="DeleteSpeech"
                                        Width="50" Margin="20 0"
                                        Height="50"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Background="{StaticResource ComplementaryColor}"
                                        Click="{x:Bind ViewModel.DeleteSpeech}"
                                        Foreground="White">
                                    <SymbolIcon Symbol="Delete" />
                                </Button>
                                <Button x:Name="CloseSpeech"
                                        Width="50"
                                        Height="50"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Background="{StaticResource ComplementaryColor}"
                                        Click="{x:Bind ViewModel.CloseSpeech}"
                                        Foreground="White">
                                    <SymbolIcon Symbol="Cancel" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
