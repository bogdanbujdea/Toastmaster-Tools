<UserControl x:Class="ToastmasterTools.Core.Controls.ToastmasterPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:ToastmasterTools.Core.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="PickerControl"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid>
        <ComboBox x:Name="MembersList"
                  Height="60"
                  HorizontalAlignment="Center"
                  Foreground="{Binding ElementName=PickerControl, Path=Foreground}"
                  ItemsSource="{x:Bind ViewModel.Members, Mode=OneWay}"
                  PlaceholderText="Choose a speaker"
                  SelectionChanged="SelectedMemberChanged"                  
                  Style="{StaticResource MembersComboBoxStyle}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Margin="2"
                               FontSize="18"
                               Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</UserControl>
